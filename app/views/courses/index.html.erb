<h1><%= t("course.list")%></h1>

<table class="table table-condensed">
  <tr>
    <th><%= t("course.name")%></th>
    <th><%= t("course.full_name")%></th>
    <th><%= t("course.code")%></th>
    <th><%= t("course.description")%></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.name %></td>
    <td><%= course.course_name %></td>
    <td><%= course.course_code %></td>
    <td><%= raw course.description %></td>
    <td><%= link_to t('show'), course %></td>
    <td><%= link_to t('edit'), edit_course_path(course) %></td>
    <td><%= link_to t('destroy'), course, method: :delete, data: { confirm: t('sure') } %></td>
  </tr>
<% end %>
</table>

<br />
<% if can? :new,@course   %>
<%= link_to t("clclass.new_clclass"), new_course_path %>
<% end %>
