
<h1><%= t("clclass.lecture.list")%></h1>

<table>
  <tr>
    <th><%= t("clclass.lecture.name") %></th>
    <th><%= t("clclass.lecture.video") %></th>
    <th><%= t("clclass.lecture.slides") %></th>
    <th><%= t("clclass.lecture.key_concepts") %></th>
    <th><%= t("clclass.lecture.assignment") %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lectures.each do |lecture| %>
  <tr>
    <th><%= lecture.name %></th>
    <th><%= lecture.video %></th>
    <th><%= lecture.slides%></th>
    <th><%= lecture.key_concepts%></th>
    <th><%= lecture.assignment%></th>
    <td><%= link_to t("show"), clclass_lecture_path(@clclass, lecture) %></td>
    <td><%= link_to t("edit"), edit_clclass_lecture_path(@clclass, lecture) %></td>
    <td><%= link_to t("destroy"), clclass_lecture_path(@clclass, lecture), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= if can? :modify, @lectures; link_to t("clclass.lecture.new"), new_clclass_lecture_path end %>
